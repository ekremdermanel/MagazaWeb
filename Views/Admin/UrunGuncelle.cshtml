@model Urun

<div class="container mt-4">
    <div class="mb-3">

        <h2>Ürün Güncelle</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="UrunAdi">UrunAdi</label>
                <input asp-for="UrunAdi" value="@Model.UrunAdi" class="form-control">
                <span class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Fiyat">Fiyat</label>
                <input asp-for="Fiyat" value="@Model.Fiyat" class="form-control">
                <span class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Aciklama">Aciklama</label>
                <textarea asp-for="Aciklama" class="form-control">@Model.Aciklama</textarea>
                <span class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Tamam</button>

        </form>

    </div>
</div>